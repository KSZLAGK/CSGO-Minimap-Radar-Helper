        <Button Content="Add" Style="{StaticResource DefaultButtonStyle}" HorizontalAlignment="Left" Margin="119,331,0,0" VerticalAlignment="Top" Width="50" Click="OnLoadRadarClick" Height="20"/>
        <Label Content="Hostage 1" HorizontalAlignment="Left" Margin="30,328,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Width="84"/>
        <Button Content="X" Style="{StaticResource DefaultButtonStyle}" HorizontalAlignment="Left" Margin="174,362,0,0" VerticalAlignment="Top" Width="22" Click="OnLoadRadarClick" Height="20"/>
        <Button Content="Add" Style="{StaticResource DefaultButtonStyle}" HorizontalAlignment="Left" Margin="118,362,0,0" VerticalAlignment="Top" Width="50" Click="OnLoadRadarClick" Height="20"/>
        <Label Content="Hostage 2" HorizontalAlignment="Left" Margin="30,359,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Width="84"/>
        <Button Content="X" Style="{StaticResource DefaultButtonStyle}" HorizontalAlignment="Left" Margin="174,393,0,0" VerticalAlignment="Top" Width="22" Click="OnLoadRadarClick" Height="20"/>
        <Button Content="Add" Style="{StaticResource DefaultButtonStyle}" HorizontalAlignment="Left" Margin="119,393,0,0" VerticalAlignment="Top" Width="50" Click="OnLoadRadarClick" Height="20"/>
