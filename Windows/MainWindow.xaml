        <Button Content="Add" Style="{StaticResource DefaultButtonStyle}" HorizontalAlignment="Left" Margin="119,423,0,0" VerticalAlignment="Top" Width="50" Click="OnLoadRadarClick" Height="20"/>
        <Label Content="Hostage 4" HorizontalAlignment="Left" Margin="30,421,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Width="84"/>
        <Button Content="X" Style="{StaticResource DefaultButtonStyle}" HorizontalAlignment="Left" Margin="174,455,0,0" VerticalAlignment="Top" Width="22" Click="OnLoadRadarClick" Height="20"/>
        <Button Content="Add" Style="{StaticResource DefaultButtonStyle}" HorizontalAlignment="Left" Margin="118,455,0,0" VerticalAlignment="Top" Width="50" Click="OnLoadRadarClick" Height="20"/>
        <Label Content="Hostage 5" HorizontalAlignment="Left" Margin="30,452,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Width="84"/>

    </Grid>
</Window>
